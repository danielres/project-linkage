mixin teaser(context, kicker, heading, time, author, tag, src, location)
	.teaser
		a.teaser__inner(href="prototype__" + context +".html" title=heading)
			figure.teaser__figure
				if src
					img(src=src alt=heading)
				else
					img(src="//source.unsplash.com/collection/141706/600x424/?random" + i alt=heading) 
			if time
				time.teaser__time!=time
			if location
				span.teaser__location!=location
			if author
				span.teaser__author!=author
			if kicker
				h4.teaser__kicker!=kicker
			else
				h4.teaser__kicker
					+text-gen(Math.floor(Math.random() * (10 - 30)+30), "c")
			if heading
				h3.teaser__heading!=heading
			else
				h3.teaser__heading
					+text-gen(Math.floor(Math.random() * (20 - 60)+60), "c")
			p.teaser__excerpt 
				+text-gen(Math.floor(Math.random() * (100 - 380)+380), "c", true)
		if tag
			ul.teaser__tag
				each val in tag
					li
						a(href="prototype__tag.html" title="Mehr Beitr√§ge zum Thema")
							span!=val


